<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/note" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="2dip" android:gravity="right" android:layout_gravity="right" >
	<include layout="@layout/listitem_conversation_message_util" />
	<TextView  android:layout_alignParentRight="true" android:layout_marginRight="10dip" android:layout_centerVertical="true" android:singleLine="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="我" android:textColor="#fff"   />
	  <LinearLayout  android:id="@+id/body_layout" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="right|top" >
			<RelativeLayout  android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1">
				<RelativeLayout android:id="@+id/body_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="?theme_msg_send"  android:layout_alignParentRight="true" android:layout_marginLeft="50dip" android:layout_marginTop="13dip" >
				<!-- text and picture Message  -->
					<RelativeLayout android:id="@+id/text_and_picture_layout" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:minHeight="30dip"  android:layout_centerVertical="true"  >
						<ImageView android:id="@+id/pic" android:layout_width="@dimen/msg_pic_widht" android:layout_height="@dimen/msg_pic_height" android:layout_centerVertical="true" android:scaleType="centerCrop"   />
						<TextView android:id="@+id/body" android:layout_width="wrap_content" android:minWidth="50dip" android:layout_height="wrap_content" android:textSize="14dip" android:gravity="left" android:textColor="#000000" android:bufferType="spannable" android:text=""   android:layout_centerVertical="true" />
						<ProgressBar android:id="@+id/pro_load" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:visibility="visible"   style="@style/CustomProgressStyle" />
					</RelativeLayout>
				<!-- text and picture Message  -->
				<!-- Record Message -->
					<RelativeLayout android:visibility="visible" android:id="@+id/record_layout" android:layout_width="100dip" android:layout_height="wrap_content" android:minHeight="30dip"   android:layout_centerVertical="true" >
						<ImageView  android:id="@+id/loading" android:layout_centerVertical="true" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:src="@drawable/loading" android:layout_marginLeft="5dip" android:visibility="gone" />
						<ImageView  android:id="@+id/record_pic" android:layout_centerVertical="true" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:src="?theme_msg_audio_play" android:layout_marginLeft="5dip"  />
						<TextView android:id="@+id/record_time" android:layout_alignParentRight="true" android:layout_marginLeft="10dip" android:layout_centerVertical="true" android:singleLine="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2“" android:textColor="#111111"   />
					</RelativeLayout>
				<!--Record Message  -->
				</RelativeLayout> 
				<ImageView android:id="@+id/report_icon" android:layout_width="wrap_content"  android:layout_height="wrap_content" android:layout_marginLeft="-15dip" android:src="@drawable/msg_state_send_error" android:layout_gravity="right" android:layout_alignLeft="@id/body_content"  android:layout_marginTop="13dip"/>
				<ImageView android:id="@+id/msg_ptt" android:layout_width="wrap_content"  android:layout_height="wrap_content" android:src="@drawable/msg_ptt" android:layout_gravity="right" android:layout_alignLeft="@id/body_content" android:visibility="gone" />
			</RelativeLayout>
			<LinearLayout   android:visibility="gone"  android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:layout_weight="4.6" android:gravity="bottom|center_horizontal">
					<TextView  android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:textSize="10dip" android:textColor="#838383" android:text="10:00:00" android:gravity="center" />
					<ImageView android:id="@+id/user_head" android:layout_width="42dip" android:layout_height="42dip" android:src="?theme_user_head"  />
			</LinearLayout>
    </LinearLayout>
</LinearLayout>
	

	