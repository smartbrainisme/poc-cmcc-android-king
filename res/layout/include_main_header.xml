<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical"  xmlns:android="http://schemas.android.com/apk/res/android" >
	  <RelativeLayout android:id="@+id/title_main"  android:orientation="horizontal" android:layout_width="fill_parent" android:clickable="true" android:layout_height="@dimen/main_header_height"   android:padding="?theme_title_menu_pading"  android:background="?theme_bg_title" >
	 		<RelativeLayout android:id="@+id/menu_left_button" android:layout_width="@dimen/main_menu_btn_width" android:layout_height="fill_parent"  android:clickable="true" android:background="?theme_menu_bg" android:layout_centerVertical="true" android:layout_marginRight="3dip">
	 		 	<ImageView android:id="@+id/bottom_left_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="?theme_menu_left_icon" android:layout_centerInParent="true"/>
	 		 	<TextView android:id="@+id/tv_new" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="?theme_nav_unread_bg" android:gravity="center" android:text="New" android:textColor="#ffffff" android:maxLength="3" android:textSize="8dip" android:visibility="gone"/>
	 		</RelativeLayout>
	 		<RelativeLayout android:id="@+id/bottom_mid" android:layout_width="wrap_content" android:layout_height="fill_parent"  android:layout_centerInParent="true" android:layout_toRightOf="@id/menu_left_button" android:layout_toLeftOf="@id/talk_menu_right" >
	 			<TextView android:layout_height="fill_parent" android:layout_width="fill_parent" android:text="" android:id="@+id/tv_main_title" android:textSize="20dip" android:gravity="center" android:textColor="?theme_color_title" android:layout_alignParentTop="true" android:singleLine="true"  android:layout_centerInParent="true"  />
	 			<LinearLayout android:id="@+id/main_speak_panel" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/media_session_speak" android:orientation="horizontal" android:layout_marginRight="3dip">
	 			    <ImageView android:id="@+id/main_speak_icon" android:layout_width="wrap_content" android:layout_height="fill_parent" android:src="@drawable/record_default" android:layout_gravity="center"/>
	 			    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:gravity="center_vertical">
	 					<TextView android:id="@+id/main_speak_group" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Group" android:textSize="12dip" android:textColor="#ff000000" android:singleLine="true" />
						<TextView android:id="@+id/main_speak_user" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Speaker" android:textSize="10dip" android:textColor="#90000000" android:singleLine="true" />
	 				</LinearLayout>
	 			</LinearLayout>
	 		</RelativeLayout>
	 		<LinearLayout android:id="@id/talk_menu_right" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_alignParentRight="true" android:gravity="right|center_vertical" android:orientation="horizontal"  android:layout_centerVertical="true"  >
		        <RelativeLayout android:id="@id/talk_menu_right_button" android:layout_width="@dimen/main_menu_btn_width" android:layout_height="fill_parent"  android:clickable="true" android:background="?theme_menu_bg" >
		       		<ImageView  android:id="@+id/bottom_right_icon" android:layout_width="wrap_content" android:layout_height="wrap_content"   android:src="?theme_menu_right_icon" android:layout_centerInParent="true"/>
		        	<TextView android:id="@+id/tv_new_notice" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="?theme_nav_unread_bg" android:layout_margin="5dip" android:gravity="center" android:text="1" android:textColor="#ffffff" android:maxLength="3" android:textSize="11dip" android:visibility="gone"/>
		        </RelativeLayout>
	       </LinearLayout>
	  </RelativeLayout>
	  <View android:id="@+id/line" android:layout_width="fill_parent"  android:layout_height="?theme_title_divider_height"    android:background="?theme_divider_title"  />
 	 <TextView android:visibility="gone" android:id="@+id/network_tip"  android:textSize="14dip"  android:textColor="#a3721d" android:text="@string/talk_network_warning" android:gravity="center"  android:layout_width="fill_parent" android:layout_height="fill_parent"   android:paddingLeft="10dip" android:drawableLeft="@drawable/msg_state_send_error" android:background="@drawable/error_hint_main_bg"/>
 </LinearLayout>