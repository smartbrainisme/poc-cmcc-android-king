<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?theme_sider_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/include_main_header" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@id/talk_setting_voice_amplifier"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?theme_sider_title_bg"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:layout_marginLeft="10dip"
                        android:gravity="left|center_vertical"
                        android:text="@string/talk_tools_setting_voice_amplifier"
                        android:textColor="?theme_button_text_color"
                        android:textSize="18dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:gravity="left|center_vertical"
                        android:text="@string/talk_tools_setting_voice_amplifier_tip"
                        android:textColor="#787878"
                        android:textSize="12dip" />
                </LinearLayout>

                <CheckBox
                    android:id="@id/talk_setting_voice_amplifier_check"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dip"
                    android:button="?theme_btn_check_new" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="?theme_divider_h" />

            <LinearLayout
                android:id="@id/talk_setting_answer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?theme_sider_title_bg"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:layout_marginLeft="10dip"
                        android:gravity="left|center_vertical"
                        android:text="@string/talk_tools_setting_answer_mode"
                        android:textColor="?theme_button_text_color"
                        android:textSize="18dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:gravity="left|center_vertical"
                        android:text="@string/talk_tools_setting_answer_mode_tip"
                        android:textColor="#787878"
                        android:textSize="12dip" />
                </LinearLayout>

                <CheckBox
                    android:id="@id/talk_setting_answer_check"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dip"
                    android:button="?theme_btn_check_new" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="?theme_divider_h" />
            
            <LinearLayout
                android:id="@id/talk_setting_isb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?theme_sider_title_bg"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:layout_marginLeft="10dip"
                        android:gravity="left|center_vertical"
                        android:text="@string/talk_tools_setting_isb"
                        android:textColor="?theme_button_text_color"
                        android:textSize="18dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:gravity="left|center_vertical"
                        android:text="@string/talk_tools_setting_isb_tip"
                        android:textColor="#787878"
                        android:textSize="12dip" />
                </LinearLayout>

                <CheckBox
                    android:id="@id/talk_setting_isb_check"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dip"
                    android:button="?theme_btn_check_new" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="?theme_divider_h" />

            <LinearLayout
                android:id="@id/talk_setting_ptt_click"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?theme_sider_title_bg"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:layout_marginLeft="10dip"
                        android:gravity="left|center_vertical"
                        android:text="@string/talk_tools_setting_ptt_click"
                        android:textColor="?theme_button_text_color"
                        android:textSize="18dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:gravity="left|center_vertical"
                        android:text="@string/talk_tools_setting_ptt_click_tip"
                        android:textColor="#787878"
                        android:textSize="12dip" />
                </LinearLayout>

                <CheckBox
                    android:id="@id/talk_setting_ptt_click_check"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dip"
                    android:button="?theme_btn_check_new" />
            </LinearLayout>

            <View
                android:id="@id/talk_setting_ptt_click_line"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="?theme_divider_h" />

            <LinearLayout
                android:id="@id/talk_setting_ptt_volume"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?theme_sider_title_bg"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:layout_marginLeft="10dip"
                        android:gravity="left|center_vertical"
                        android:text="@string/talk_tools_setting_ptt_volume"
                        android:textColor="?theme_button_text_color"
                        android:textSize="18dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:gravity="left|center_vertical"
                        android:text="@string/talk_tools_setting_ptt_volume_tip"
                        android:textColor="#787878"
                        android:textSize="12dip" />
                </LinearLayout>

                <CheckBox
                    android:id="@id/talk_setting_ptt_volume_check"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="10dip"
                    android:button="?theme_btn_check_new" />
            </LinearLayout>

            <View
                android:id="@id/talk_setting_ptt_volume_line"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="?theme_divider_h" />

            

            <LinearLayout
                android:id="@id/talk_setting_hb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?theme_sider_title_bg"
                android:clickable="false"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@id/talk_setting_hb_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:layout_marginLeft="10dip"
                        android:gravity="left|center_vertical"
                        android:text="@string/talk_tools_setting_hb"
                        android:textColor="?theme_button_text_color"
                        android:textSize="18dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:gravity="left|center_vertical"
                        android:text="@string/talk_tools_setting_hb_tip"
                        android:textColor="#787878"
                        android:textSize="12dip" />

                    <RelativeLayout
                        android:id="@+id/talk_hb_frequence_item"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="?theme_sider_title_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp" >

                        <RadioGroup
                            android:id="@+id/rg_hb_frequence"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/rb_slow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:background="?theme_radio_check"
                                android:button="@null" />

                            <View
                                android:layout_width="60dp"
                                android:layout_height="5dp"
                                android:background="@drawable/selector_radio_bg" />

                            <RadioButton
                                android:id="@+id/rb_normal"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:background="?theme_radio_check"
                                android:button="@null" />

                            <View
                                android:layout_width="60dp"
                                android:layout_height="5dp"
                                android:background="@drawable/selector_radio_bg" />

                            <RadioButton
                                android:id="@+id/rb_fast"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:background="?theme_radio_check"
                                android:button="@null" />

                            <View
                                android:layout_width="60dp"
                                android:layout_height="5dp"
                                android:background="@drawable/selector_radio_bg" />

                            <RadioButton
                                android:id="@+id/rb_high"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:background="?theme_radio_check"
                                android:button="@null" />
                        </RadioGroup>

                        <TextView
                            android:id="@+id/tv_slow"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_below="@id/rg_hb_frequence"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_toLeftOf="@+id/tv_normal"
                            android:text="低速"
                            android:textColor="@color/radiobutton_text_gray"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@id/tv_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_below="@id/rg_hb_frequence"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_toLeftOf="@+id/v_hb_center"
                            android:text="正常"
                            android:textColor="@color/radiobutton_text_gray"
                            android:textSize="15dp" />

                        <View
                            android:id="@id/v_hb_center"
                            android:layout_width="50dp"
                            android:layout_height="5dp"
                            android:layout_below="@id/rg_hb_frequence"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/selector_radio_bg"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tv_fast"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_below="@id/rg_hb_frequence"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@id/v_hb_center"
                            android:text="较快"
                            android:textColor="@color/radiobutton_text_gray"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/tv_high"
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:layout_below="@id/rg_hb_frequence"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@id/tv_fast"
                            android:text="高速"
                            android:textColor="@color/radiobutton_text_gray"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@id/talk_setting_hb_line"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="?theme_divider_h" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>