<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<include layout="@layout/include_main_header" />
	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical">

		<LinearLayout android:id="@id/talk_lv_tool_gps"
			android:padding="10dip" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="center_vertical"
			android:background="?theme_selector_group_item">
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="?theme_menu_gps_set" />
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginLeft="15dip"
				android:textColor="?theme_button_text_color" android:text="@string/talk_tools_location"
				android:gravity="center_vertical" android:textSize="20dip" />
		</LinearLayout>
		<View android:id="@id/talk_lv_tool_gps_divider"
			android:layout_width="fill_parent" android:layout_height="1dip"
			android:background="?theme_divider_h" />

		<LinearLayout android:gravity="center_vertical"
			android:id="@id/talk_setting_voice" android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="60dip"
			android:background="?theme_selector_group_item">
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="?theme_menu_ptt_set"
				android:layout_marginLeft="10dip" />
			<TextView android:textColor="?theme_button_text_color" android:textSize="20dip"
				android:gravity="center_vertical" android:layout_marginLeft="15dip"
				android:text="@string/talk_tools_setting_voice"
				android:layout_width="wrap_content" android:layout_height="fill_parent" />
		</LinearLayout>
		<View android:layout_width="fill_parent" android:layout_height="1dip"
			android:background="?theme_divider_h" />

		<LinearLayout android:gravity="center_vertical"
			android:id="@id/talk_setting_rename" android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="60dip"
			android:background="?theme_selector_group_item">
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="?theme_menu_name_set"
				android:layout_marginLeft="10dip" />
			<TextView android:textColor="?theme_button_text_color" android:gravity="center_vertical"
				android:text="@string/talk_user_info_update_name" android:textSize="20dip"
				android:layout_marginLeft="15dip" android:layout_width="wrap_content"
				android:layout_height="fill_parent" />
		</LinearLayout>
		<View android:layout_width="fill_parent" android:layout_height="1dip"
			android:background="?theme_divider_h" />

		<LinearLayout android:gravity="center_vertical"
			android:id="@id/talk_setting_pwd" android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="60dip"
			android:background="?theme_selector_group_item">
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="?theme_menu_pwd_set"
				android:layout_marginLeft="10dip" />
			<TextView android:textColor="?theme_button_text_color" android:textSize="20dip"
				android:gravity="center_vertical" android:layout_marginLeft="15dip"
				android:text="@string/talk_tools_pwd_update" android:layout_width="wrap_content"
				android:layout_height="fill_parent" />
		</LinearLayout>
		<View android:layout_width="fill_parent" android:layout_height="1dip"
			android:background="?theme_divider_h" />

		<LinearLayout android:gravity="center_vertical"
			android:visibility="gone" android:id="@id/talk_setting_answer"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="60dip" android:background="?theme_selector_group_item">
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:src="@drawable/tool_call"
				android:layout_marginLeft="10dip" />
			<LinearLayout android:gravity="center_vertical"
				android:layout_width="fill_parent" android:layout_height="60dip">
				<TextView android:textColor="?theme_button_text_color" android:textSize="20dip"
					android:gravity="center_vertical" android:layout_marginLeft="15dip"
					android:layout_marginRight="50dip" android:text="@string/talk_tools_setting_answer_mode"
					android:layout_width="wrap_content" android:layout_height="fill_parent" />
			</LinearLayout>
			<CheckBox android:id="@id/talk_setting_answer_check"
				android:layout_marginLeft="-50dip" android:gravity="center"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:button="?theme_btn_check" android:clickable="false" />
		</LinearLayout>
		<View android:layout_width="fill_parent" android:layout_height="1dip"
			android:visibility="gone" android:background="?theme_divider_h" />

	</LinearLayout>
</LinearLayout>
