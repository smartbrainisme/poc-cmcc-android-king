	</LinearLayout>
	<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" >
		<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:gravity="center">
			<ImageView android:id="@+id/iv_task_empty" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/group_idle"/>
		</LinearLayout>
	    <com.cmccpoc.widget.MListView
					android:id="@+id/lv_task" android:layout_height="fill_parent"
					 android:layout_width="fill_parent"
