<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/note" xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:padding="2dip" android:gravity="right" >
	  <include layout="@layout/listitem_conversation_message_util" />	  
	<LinearLayout  android:id="@+id/body_layout" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:gravity="top" >
		<LinearLayout android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="4.6" android:gravity="center_horizontal|bottom" android:orientation="vertical" >
				<TextView  android:id="@+id/time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:textSize="10dip" android:textColor="#838383" android:text="10:00:00" android:gravity="center" />
				<ImageView android:id="@+id/user_head" android:layout_width="42dip" android:layout_height="42dip" android:src="?theme_user_head"  />
		</LinearLayout>
		<RelativeLayout  android:id="@+id/body_content2"  android:layout_width="fill_parent" android:layout_height="wrap_content"  android:layout_weight="1" >
			<TextView  android:id="@+id/user_name" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:singleLine="true"  android:textColor="#fff" android:text="fsdf"  android:layout_marginLeft="10dip"  android:layout_marginBottom="5dp" />
			<RelativeLayout android:id="@+id/body_content" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:background="?theme_msg_recv" android:layout_marginRight="50dip" android:layout_below="@+id/user_name" >
			<!-- text and picture Message -->
				<RelativeLayout  android:id="@+id/text_and_picture_layout" android:layout_height="wrap_content"  android:minHeight="30dip"  android:layout_width="wrap_content"  >
					<ImageView android:id="@+id/pic"  android:layout_width="@dimen/msg_pic_widht" android:layout_height="@dimen/msg_pic_height"  android:layout_centerVertical="true" android:scaleType="centerCrop"  android:src="@drawable/msg_image" />		
					<TextView android:id="@+id/body" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="50dip" android:gravity="center_vertical" android:textSize="14dip" android:textColor="#000000" android:bufferType="spannable" android:layout_centerVertical="true"/>
					<ProgressBar android:id="@+id/pro_load" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:visibility="visible"  style="@style/CustomProgressStyle" />
					<TextView android:id="@+id/downlaod_btn" android:layout_width="60dip" android:layout_height="30dip" android:gravity="center" android:background="@drawable/selector_button" android:layout_marginTop="12dip" android:layout_marginLeft="10dip" android:textColor="#ffffff" android:layout_toRightOf="@id/pic" android:text="@string/talk_download" android:visibility="gone" />
				</RelativeLayout>
			<!-- text and picture Message -->
			<!-- Record Message -->
				<RelativeLayout android:visibility="visible" android:id="@+id/record_layout" android:layout_width="100dip" android:minHeight="30dip"  android:layout_height="wrap_content"  android:layout_centerVertical="true" >
					<TextView    android:id="@+id/record_time" android:layout_alignParentRight="true" android:layout_marginRight="5dip" android:layout_centerVertical="true" android:singleLine="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="8" android:textColor="#111111"/>
					<ImageView   android:id="@+id/loading"  android:layout_alignParentLeft="true"  android:layout_marginLeft="5dip" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:src="@drawable/loading" android:visibility="gone"/>
					<ImageView   android:id="@+id/record_pic"  android:layout_alignParentLeft="true"  android:layout_marginLeft="5dip" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:src="?theme_msg_audio_play" android:layout_centerVertical="true"  />
					<ProgressBar android:indeterminateDrawable="@drawable/pro_drawable" style="@style/CustomProgressStyle" android:id="@+id/pro_loading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:scaleType="fitCenter" android:visibility="gone" />
				</RelativeLayout>
			<!--Record Message  -->
			</RelativeLayout>
			<ImageView android:id="@+id/un_read" android:src="@drawable/msg_unread" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_alignRight="@id/body_content" android:visibility="gone"/>
			<ImageView android:id="@+id/msg_ptt" android:layout_width="wrap_content"  android:layout_height="wrap_content" android:src="@drawable/msg_ptt" android:layout_gravity="right" android:layout_alignLeft="@id/body_content" android:visibility="gone" android:layout_marginTop="10dip" android:layout_marginLeft="108dip" />
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
	