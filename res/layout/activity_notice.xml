<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<include layout="@layout/include_main_header" />
	</LinearLayout>

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:gravity="center">
		<RelativeLayout android:id="@+id/talk_layout_notice_list_panel"
			 android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<WebView android:id="@id/talk_layout_notice_list"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:scrollbars="vertical" />
		</RelativeLayout>
		<RelativeLayout android:id="@+id/talk_layout_notice_content_panel"
			 android:visibility="gone"
			android:isScrollContainer="true" android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<View android:id="@+id/talk_layout_notice_line"
				android:layout_width="fill_parent" android:layout_height="1dip"
				android:background="@drawable/left_divider_line"
				android:layout_above="@id/talk_layout_notice_comment" />
			<WebView android:id="@id/talk_layout_notice_content"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:scrollbars="vertical" android:layout_above="@id/talk_layout_notice_line" />
			<RelativeLayout android:id="@id/talk_layout_notice_comment"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_alignParentBottom="true" android:padding="5dip"
				android:gravity="center_vertical">
				<EditText android:id="@id/talk_layout_notice_comment_text"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:gravity="center_vertical" android:layout_marginRight="6dip"
					android:background="@drawable/text_box" android:hint="@string/talk_tools_notice_comment_tip"
					android:textColor="#ffffff" android:padding="6dip"
					android:layout_toLeftOf="@id/talk_layout_notice_comment_send" />
				<TextView android:id="@id/talk_layout_notice_comment_send"
					android:layout_width="60dip" android:layout_height="wrap_content"
					android:gravity="center" android:background="@drawable/selector_btn_nav"
					android:text="@string/talk_tools_notice_comment_send"
					android:textSize="16dip" android:layout_alignParentRight="true" />
			</RelativeLayout>
			<View android:layout_width="1dip" android:layout_height="fill_parent"
				android:background="@drawable/v_divider_line" />
		</RelativeLayout>
		<ProgressBar android:id="@id/talk_layout_notice_progress"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_centerInParent="true"></ProgressBar>
	</RelativeLayout>
</LinearLayout>
