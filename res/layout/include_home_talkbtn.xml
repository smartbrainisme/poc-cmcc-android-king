<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/media_ptt_box"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >

    <ImageView
        android:id="@+id/media_ptt_talk_press_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name_cmcc"
        android:src="@drawable/btn_talk_press_new"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/media_ptt_talk_press_bg_front"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name_cmcc"
        android:src="@drawable/btn_talk_empy" />

    <LinearLayout
        android:id="@+id/media_talk_text_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/media_ptt_talk_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="2"
            android:textColor="#694E00"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/media_ptt_talk_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排队中"
            android:textColor="#694E00"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>