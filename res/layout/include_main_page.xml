<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/talk_layout_group"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:paddingRight="@dimen/main_padding_widht"
	android:background="?theme_sider_bg"
	 xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout android:id="@id/talk_layout_group"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical">
		<RelativeLayout android:id="@id/talk_layout_title"
			android:layout_width="fill_parent" android:layout_height="60dip"
			android:background="?theme_sider_title_bg">
			<ImageView android:id="@+id/talk_app_icon"
				android:layout_width="35dip" android:layout_height="wrap_content"
				android:padding="5dip" android:src="?theme_logo_icon" />
			<LinearLayout android:id="@+id/talk_title_panel" android:layout_toRightOf="@id/talk_app_icon" android:layout_toLeftOf="@id/talk_title_tools" android:layout_width="wrap_content" android:layout_height="fill_parent"
			    android:orientation="vertical" android:gravity="center_vertical" >
				<TextView android:id="@id/talk_tv_user_name" android:maxWidth="150dip" android:singleLine="true"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#ffffffff" 
					android:textSize="20sp" />
				<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" >
					<ImageView android:id="@+id/talk_user_isb" android:visibility="gone"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:layout_marginRight="5dip" android:src="@drawable/user_state_isb" />
					<TextView android:id="@id/talk_tv_user_id"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:textColor="#ffffffff" android:singleLine="true"
						android:textSize="11sp" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout android:id="@id/talk_title_tools"
				android:layout_width="wrap_content" android:layout_height="fill_parent"
				android:layout_alignParentRight="true" android:orientation="horizontal" android:gravity="right">
				<ImageView android:id="@+id/talk_tv_user_all"
					android:layout_width="wrap_content" android:layout_height="fill_parent" android:clickable="true" android:padding="4dip"
					android:src="@drawable/selector_btn_contact" android:gravity="center" />
				<ImageView android:id="@+id/talk_tv_notice"
					android:layout_width="wrap_content" android:layout_height="fill_parent" android:clickable="true" android:padding="4dip"
					android:src="@drawable/selector_btn_tool_infosys" android:gravity="center" />
				<ImageView android:id="@+id/talk_tv_tools"
					android:layout_width="wrap_content" android:layout_height="fill_parent" android:clickable="true" android:padding="4dip"
					android:src="@drawable/selector_btn_more" android:gravity="center" />
				<ImageView android:id="@+id/talk_tv_session"
					android:layout_width="wrap_content" android:layout_height="fill_parent" android:clickable="true" android:paddingLeft="6dip"
					android:src="@drawable/selector_btn_page_session" android:gravity="center" />
			</LinearLayout>
		</RelativeLayout>
		<ExpandableListView android:layout_below="@id/talk_layout_title"
			android:id="@+id/exp_listview_group" android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:cacheColorHint="#00000000"
			android:groupIndicator="@null" style="@style/friendlist_bg_divider_default" />
	</RelativeLayout>
	<!-- 
	<View android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:background="@drawable/slide_left_shadow" />
	-->
</RelativeLayout>