<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent"  android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:isScrollContainer="true">
		<LinearLayout  android:id="@+id/bottom_pannel" android:layout_width="fill_parent"  android:layout_height="fill_parent" android:orientation="vertical" android:layout_alignParentBottom="true"  >
			<com.airtalkee.widget.PullToRefreshListView  android:id="@+id/lv_message"  android:layout_width="fill_parent"  android:layout_height="fill_parent"  android:cacheColorHint="#00000000"  android:dividerHeight="1dip"  android:divider="#00000000"  android:layout_weight="1"  android:listSelector="@drawable/chat_page_item_press" android:transcriptMode="alwaysScroll"  android:stackFromBottom="true"/>
			<FrameLayout android:visibility="visible" android:id="@+id/voic_text_pannel" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:background="#7A7E86" >
				<LinearLayout android:visibility="gone"  android:id="@+id/text_pannel" android:layout_width="fill_parent"  android:layout_height="60dp" android:gravity="center_vertical" android:orientation="horizontal" >
		          	<ImageView android:id="@+id/btn_text_close"  android:layout_width="45dp"     android:layout_height="45dp" android:src="@drawable/ic_input_close" android:scaleType="center" android:background="@drawable/shape_black_bg" android:layout_marginLeft="10dp" android:contentDescription="@string/app_name" />
		          	<EditText  android:id="@+id/et_msg" android:maxLength="300" android:background="@drawable/shape_white_bg" android:layout_weight="1" android:layout_width="fill_parent" android:minHeight="45dp" android:layout_height="wrap_content" android:bufferType="spannable" 	android:gravity="center_vertical" android:textColor="#000" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:hint="在此输入文字"  android:paddingLeft="5dp" android:paddingRight="5dp"/>
					<Button  android:id="@+id/send"   android:text="@string/talk_channel_btn_send_msg" android:layout_width="90dp"  android:textColor="#fff"   android:layout_height="45dp" android:background="@drawable/selector_btn_send" android:layout_marginRight="10dp" android:textSize="14sp" android:enabled="false" />
				</LinearLayout>
				<FrameLayout android:visibility="gone" android:id="@+id/voice_pannel" android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:orientation="horizontal" android:background="#4A4A4A" android:paddingBottom="30dp"  >
				    <View android:layout_width="fill_parent" android:layout_height="1dp" android:background="#787878" android:layout_gravity="top" />
		          	<ImageView android:id="@+id/btn_voice"  android:layout_width="wrap_content"     android:layout_height="wrap_content"  android:scaleType="center" android:background="@drawable/ic_voice_idle" android:layout_marginLeft="10dp" android:contentDescription="@string/app_name" android:layout_gravity="center_horizontal" android:layout_marginTop="30dp" />
					<ImageView android:id="@+id/btn_voice_close"  android:layout_width="45dp"     android:layout_height="45dp" android:src="@drawable/ic_close1" android:scaleType="center" android:layout_marginLeft="40dp"  android:layout_gravity="bottom" android:contentDescription="@string/app_name" />
				</FrameLayout>
			</FrameLayout>
		</LinearLayout>
		<include layout="@layout/include_mac_recording"/>
</FrameLayout>
