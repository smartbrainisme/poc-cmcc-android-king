<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"  android:layout_width="fill_parent" android:id="@+id/main_content"  android:layout_height="fill_parent" >
	<RelativeLayout   android:orientation="vertical"  android:layout_width="fill_parent" android:id="@+id/main_content" android:layout_height="fill_parent" >
		<RelativeLayout  android:orientation="vertical"  android:layout_width="fill_parent" android:id="@+id/login" android:layout_height="wrap_content"  android:layout_marginLeft="20dip" android:layout_marginRight="20dip" android:layout_marginTop="150dip" android:background="?theme_bg_input" >
			<EditText android:drawableLeft="@drawable/login_user" android:gravity="center_vertical" android:layout_height="50dip" android:hint="@string/talk_input_validate" android:id="@+id/temp_code"  android:textSize="15dip" android:layout_width="fill_parent"   android:layout_marginLeft="20dip"  android:drawablePadding="20dip" android:inputType="phone" android:maxLength="11" android:background="#00000000" android:textColor="#ffffff" android:paddingRight="104dip"/>
			<Button android:id="@+id/btn_waiting" android:layout_width="100dip" android:layout_height="48dip" android:layout_centerVertical="true" android:background="@drawable/selector_get" android:layout_alignParentRight="true" android:layout_marginRight="2dip" android:textColor="#afffffff"/>
		</RelativeLayout>
		<TextView android:layout_below="@id/login" android:layout_marginTop="20dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/talk_userlogin_text" android:gravity="center"/>
		<Button   android:layout_height="50dip"  android:id="@+id/next"  android:text="@string/talk_complete_register"  android:textSize="18dip" android:textColor="?theme_button_text_color" android:layout_width="fill_parent"   android:layout_marginLeft="18dip" android:layout_marginRight="18dip"  android:layout_marginBottom="30dip" android:background="?theme_button" android:layout_alignParentBottom="true"  />
		<ImageView   android:layout_width="wrap_content"  android:id="@+id/logo"  android:src="@drawable/logo_icon" android:layout_height="wrap_content" android:layout_marginTop="50dip"  android:layout_centerHorizontal="true"/>
	</RelativeLayout>
</RelativeLayout>