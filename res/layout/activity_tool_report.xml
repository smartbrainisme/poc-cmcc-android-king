<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_marginBottom="-1dip">
		<include layout="@layout/include_main_header" />
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="center" android:baselineAligned="false">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="1">
			<Button android:id="@+id/report_report_btn_pic"
				android:layout_margin="5.0dip" android:clickable="true"
				android:background="?theme_button"
				android:layout_width="fill_parent" android:text="@string/talk_tools_report_pic"
				android:textSize="14sp" android:layout_height="50dip"
				android:paddingLeft="?theme_report_drawable_right_padding"
				android:textColor="?theme_button_text_color" android:drawableLeft="@drawable/report_icon_pic"
				android:gravity="center" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="1">
			<Button android:id="@+id/report_report_btn_vid"
				android:layout_margin="5.0dip" android:clickable="true"
				android:background="?theme_button"
				android:layout_width="fill_parent" android:text="@string/talk_tools_report_vid"
				android:textSize="14sp" android:layout_height="50dip"
				android:paddingLeft="?theme_report_drawable_right_padding"
				android:drawableLeft="@drawable/report_icon_vid" android:textColor="?theme_button_text_color"
				android:gravity="center" />
		</LinearLayout>
	</LinearLayout>
		<Button android:id="@+id/report_real_video"
				android:layout_margin="5.0dip" android:clickable="true"
				android:background="?theme_button"
				android:layout_width="fill_parent" android:text="实时视频回传"
				android:textSize="14sp" android:layout_height="50dip"
				android:paddingLeft="?theme_report_drawable_right_padding"
				android:drawableLeft="@drawable/report_icon_real_vid" android:textColor="?theme_button_text_color"
				android:gravity="center" />
	<View android:id="@+id/line_divider" android:layout_width="fill_parent"
		android:layout_height="1dip" android:background="?theme_divider_h"
		android:layout_alignParentBottom="true" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical">
		<RelativeLayout android:id="@+id/talk_report_list_panel"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:gravity="center">
			<com.airtalkee.widget.MListView
				android:id="@+id/talk_report_list" android:layout_height="wrap_content"
				android:layout_marginBottom="60dip" android:layout_width="fill_parent"
				android:cacheColorHint="#00000000" android:groupIndicator="@null" />
			<Button android:id="@+id/report_report_btn_clean"
				android:layout_alignParentBottom="true" android:layout_marginTop="5.0dip" android:layout_marginBottom="5.0dip"
				android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
				android:clickable="true" android:background="?theme_button"
				android:layout_width="fill_parent" android:text="@string/talk_report_upload_cleanall"
				android:textSize="14dip" android:layout_height="50dip"
				android:textColor="?theme_button_text_color" android:gravity="center" />
			<View android:id="@+id/line_divider" android:layout_width="fill_parent" android:layout_marginTop="-6dip"
				android:layout_height="1dip" android:background="?theme_divider_h"
				android:layout_alignTop="@id/report_report_btn_clean" />
		</RelativeLayout>
		<TextView android:id="@+id/talk_report_empty"
			android:visibility="gone" android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:textSize="16dip" android:textColor="#666666" android:layout_margin="10dip"
			android:text="@string/talk_report_upload_list_empty" android:gravity="center" />
	</LinearLayout>
</LinearLayout>