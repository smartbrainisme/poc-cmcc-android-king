<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/talk_layout_content" 	android:layout_width="fill_parent"  android:layout_height="fill_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:orientation="vertical" android:id="@id/talk_layout_session_content" android:layout_height="fill_parent" android:layout_width="fill_parent"  >
		<LinearLayout android:layout_width="fill_parent"  android:layout_height="fill_parent" android:layout_weight="1" android:orientation="vertical" android:gravity="center_horizontal">
				<LinearLayout  android:layout_width="fill_parent"  android:layout_height="wrap_content">
					<LinearLayout  android:layout_width="fill_parent"  android:layout_height="wrap_content" android:layout_weight="2" >
						<TextView android:id="@+id/talk_label_member" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="?theme_label_member" android:clickable="true" android:gravity="left|center_vertical" android:text="5" android:paddingLeft="4dip" android:paddingBottom="5dip" android:textColor="#000000" android:maxLength="3"/>
					</LinearLayout>
					<LinearLayout android:visibility="gone" android:id="@id/talk_layout_media_queue" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center_vertical"  android:layout_weight="1">
							<LinearLayout  android:layout_width="fill_parent" android:layout_height="35dip" android:orientation="horizontal"  android:layout_marginBottom="5dip" android:gravity="center_vertical">
								<TextView  android:layout_weight="1"  android:layout_width="fill_parent" android:id="@id/talk_tv_session_queue"   android:layout_height="wrap_content"  android:textColor="#ffffff" android:textSize="17dip" android:paddingLeft="5dip" android:gravity="center" />
								<ImageView android:layout_weight="6"  android:layout_width="fill_parent"  android:layout_height="wrap_content" android:src="@drawable/point_item"  android:scaleType="center" />
							</LinearLayout>
					</LinearLayout> 
					<LinearLayout  android:layout_width="fill_parent"  android:layout_height="wrap_content" android:layout_weight="2" android:gravity="right">
						<TextView android:id="@+id/talk_label_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="?theme_label_msg" android:clickable="true" android:gravity="right|center_vertical" android:text="6" android:paddingRight="4dip" android:paddingBottom="5dip" android:textColor="#000000" android:maxLength="3" />
					</LinearLayout>
				</LinearLayout>
				<RelativeLayout android:id="@id/talk_layout_video" android:visibility="gone" android:layout_width="fill_parent"  android:layout_height="fill_parent" >
					<ImageView android:id="@id/talk_btn_session_on_video" android:layout_width="wrap_content"  android:layout_height="wrap_content" android:src="@drawable/btn_talk_video_idle" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true" android:layout_marginBottom="2dip" />
					<ImageView android:id="@id/talk_btn_video_close" android:layout_width="wrap_content"  android:layout_height="wrap_content" android:src="@drawable/selector_btn_exit" android:padding="10dip" android:layout_alignParentRight="true" />
					<ImageButton  android:id="@+id/talk_btn_settings" android:layout_width="50dip" android:layout_height="40dip"  android:background="#0fffffff"  android:contentDescription="Video Settings"  android:src="@drawable/ic_settings_holo_light"  android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_margin="10dip" />
					<include layout="@layout/video_settings" />
				</RelativeLayout>
				<RelativeLayout android:id="@id/talk_layout_normal" android:visibility="visible" android:layout_width="fill_parent"  android:layout_height="fill_parent" >
					<RelativeLayout android:layout_width="wrap_content"  android:layout_height="wrap_content" android:layout_centerInParent="true" >
						<ImageView android:id="@id/talk_btn_session" android:layout_width="wrap_content"  android:layout_height="wrap_content" android:src="?theme_talk_none" android:layout_centerInParent="true" />
						<ImageView android:id="@id/talk_btn_session_call_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="?theme_talk_call_idle" android:layout_centerInParent="true" />
					</RelativeLayout>
					<LinearLayout android:visibility="gone" android:id="@id/talk_layout_hide_panel" android:layout_width="fill_parent"  android:layout_height="fill_parent" android:orientation="vertical" android:gravity="center" android:layout_centerInParent="true">
						<LinearLayout android:id="@id/talk_btn_call_center_ptt" android:layout_width="fill_parent"  android:layout_height="wrap_content" android:clickable="true" android:background="@drawable/selector_btn_nav" android:orientation="horizontal" android:gravity="center" android:layout_marginLeft="16dip" android:layout_marginRight="16dip" >
							<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/tool_call" android:layout_marginLeft="5dip" android:layout_marginRight="5dip" />
							<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="18dip"  android:singleLine="true" android:gravity="center" android:textColor="#ffffff"
							 	android:padding="5dip" android:text="@string/talk_tools_call_center" />
						</LinearLayout>
						<com.airtalkee.widget.MListView android:id="@id/talk_lv_session_member_online"  android:layout_width="fill_parent"  android:layout_height="fill_parent"  android:cacheColorHint="#00000000"  android:dividerHeight="1dip"  android:divider="@drawable/left_divider_line" android:descendantFocusability="blocksDescendants" android:layout_marginLeft="16dip" android:layout_marginRight="16dip" android:layout_marginTop="10dip" android:layout_marginBottom="10dip" />
					</LinearLayout>
					<ImageView android:id="@id/talk_btn_video_open" android:layout_width="wrap_content"  android:layout_height="wrap_content" android:src="?theme_video_share" android:padding="10dip" android:layout_alignParentRight="true" />
				</RelativeLayout>
		</LinearLayout>
		<View android:layout_width="fill_parent" android:layout_height="1dip" android:background="?theme_divider_h" />
		<LinearLayout android:id="@+id/layout_bottom"   android:layout_width="fill_parent"  android:layout_height="58dip" android:gravity="center" android:layout_alignParentBottom="true" android:background="?theme_main_bg">
			<LinearLayout android:id="@+id/talk_playback" android:layout_width="fill_parent" android:layout_height="fill_parent" android:clickable="true" android:background="?theme_button_1" android:layout_marginTop="4dip" android:layout_marginBottom="4dip" android:layout_marginLeft="10dip" android:layout_weight="1.2" android:gravity="center">
				<ImageView android:id="@+id/talk_playback_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/msg_audio_play_light" android:layout_gravity="center" android:layout_marginLeft="10dp"/>
				<RelativeLayout android:layout_width="fill_parent"  android:layout_height="wrap_content">
		 		 	<LinearLayout android:id="@+id/talk_playback_panel" android:layout_width="fill_parent"  android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginLeft="10dip" android:layout_marginRight="5dip">
		 		 		<LinearLayout  android:layout_width="fill_parent"  android:layout_height="wrap_content" android:orientation="horizontal">
		 		 			<TextView android:id="@+id/talk_playback_user" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dip" android:gravity="left" android:text="ZUOLIN" android:textColor="?theme_button_text_color" android:textSize="13dip" />
		 		 			<LinearLayout  android:layout_width="fill_parent"  android:layout_height="fill_parent" android:orientation="horizontal" android:gravity="center_vertical|right">
		 		 				<ImageView android:id="@+id/talk_playback_user_unread" android:src="@drawable/msg_unread" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="gone" />
		 		 			</LinearLayout>
		 		 		</LinearLayout>
		 		 		<LinearLayout  android:layout_width="fill_parent"  android:layout_height="wrap_content" android:orientation="horizontal">
		 		 			<TextView android:id="@+id/talk_playback_seconds" android:layout_weight="2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="1dip" android:gravity="left" android:text="12'" android:maxLength="4" android:textColor="?theme_button_text_color" android:textSize="11dip"/>
		 		 			<TextView android:id="@+id/talk_playback_time" android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="1dip" android:gravity="right" android:text="18:38:41" android:textColor="?theme_button_text_color" android:textSize="11dip"/>
		 		 		</LinearLayout>
		 		 	</LinearLayout>
		 		 	<TextView android:id="@+id/talk_playback_none" android:visibility="gone" android:layout_width="fill_parent"  android:layout_height="fill_parent" android:text="@string/talk_msg_playback_none" android:textColor="#999999" android:textSize="15dip" android:gravity="center" />
				</RelativeLayout>
	 		</LinearLayout>
	 		<LinearLayout  android:id="@+id/layout_tool" android:layout_width="fill_parent"  android:layout_height="fill_parent" android:layout_weight="1.0" android:gravity="right|center_vertical" >
				<ImageView android:id="@+id/talk_tool_manager" android:layout_width="48dip" android:layout_height="fill_parent" android:layout_marginLeft="3dip" android:src="@drawable/media_manager_select" android:gravity="center"  android:scaleType="center"   android:visibility="invisible"  android:background="@drawable/selector_group_item_dark" />
				<ImageView android:id="@+id/talk_tool_setting" android:layout_width="48dip" android:layout_height="fill_parent" android:layout_marginLeft="3dip" android:src="?theme_media_setting" android:gravity="center"  android:clickable="true"   android:scaleType="center"  android:background="@drawable/selector_group_item_dark" />
				<ImageView android:id="@+id/talk_tool_play_mode" android:layout_width="48dip" android:layout_height="fill_parent"  android:layout_marginRight="3dip" android:src="?theme_audio_speaker" android:gravity="center"  android:scaleType="center"  android:clickable="true" android:background="@drawable/selector_group_item_dark" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<ListView android:visibility="gone" android:id="@id/talk_lv_session_queue"  android:layout_width="150dip"  android:layout_height="wrap_content" android:layout_gravity="right"  android:cacheColorHint="#00000000"  android:dividerHeight="1dip"  android:divider="@drawable/left_divider_line"   android:listSelector="@drawable/selector_group_item_dark" android:transcriptMode="alwaysScroll" android:layout_marginBottom="60dip"  android:layout_marginTop="41dip" android:layout_centerHorizontal="true" android:background="#161616" />
	<LinearLayout android:visibility="gone" android:id="@id/talk_layout_session_null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_centerInParent="true" android:gravity="center_horizontal" android:background="?theme_pop_up_pannel">
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/group_idle" />
		<Button android:id="@id/talk_layout_session_null_retry" android:layout_width="260dip" android:layout_height="40dip" android:layout_marginTop="10dip" android:text="@string/talk_channel_try" android:background="@drawable/selector_button" android:textColor="#ffffff" android:gravity="center"/>
		<Button android:id="@id/talk_layout_session_null_select" android:layout_width="260dip" android:layout_height="40dip" android:layout_marginTop="10dip" android:text="@string/talk_channel_select" android:background="@drawable/selector_button" android:textColor="#ffffff" android:gravity="center"/>
	</LinearLayout>
</RelativeLayout>