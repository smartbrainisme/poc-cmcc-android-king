			</LinearLayout>
			<LinearLayout android:layout_weight="2" android:orientation="horizontal" android:layout_width="fill_parent"  android:layout_height="fill_parent"   android:gravity="center_vertical" >
				<TextView android:id="@+id/currentMessage"  android:layout_width="fill_parent" android:layout_height="wrap_content"   android:singleLine="true" android:textSize="12dip" android:bufferType="spannable" android:textColor="?theme_color_text1" android:layout_weight="1" />
