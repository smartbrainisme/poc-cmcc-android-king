			<ImageView android:id="@+id/head" android:layout_width="55dip" android:layout_height="55dip" android:src="?theme_user_dialog" android:padding="9dip" />
		</LinearLayout>
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent"  android:layout_height="fill_parent" >
			<LinearLayout  android:layout_weight="2" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="horizontal">
				 	<TextView android:id="@+id/nick_name" android:text="" android:layout_weight="1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="12dip"  android:singleLine="true"  android:textSize="15dip" android:gravity="center_vertical" android:textColor="?theme_color_text" android:bufferType="spannable"  />
